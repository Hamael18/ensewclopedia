<div class="col-4">
    <div class="card teal darken-3">
        <div class="card-image">
            <img src="/uploads/brand_images/{{ brand.image }}" alt="{{ brand.name }}">
            <a href="#" title="ajouter aux favoris"
               class="btn-floating halfway-fab waves-effect waves-light teal">
                <i class="fas fa-heart"></i>
            </a>
        </div>
        <div class="card-content">
            <span class="card-title center"><a href="{{ path('front_brand', {'slug' : brand.slug}) }}" class="white-text">{{ brand.name }}</a></span>
            <p class="white-text">{{ brand.description }}</p>
        </div>
    </div>
</div>