<form action="{{ path('search') }}" method="GET">
    <div class="container">
        <div class="row my-lg-5">
            <div class="col s12">
                <div class="row">
                    <div class="form-group input-field col s10">
                        <i class="material-icons prefix">search</i>
                        <input type="text"
                               id="autocomplete-input"
                               name="q"
                               class="form-control search-field autocomplete"
                               placeholder="marque, patron, 'blouse manche courte col claudine'"
                        >
                    </div>
                    <div class="form-group input-field">
                        <button type="submit" name="search" class="btn teal lighten-4 teal-text text-darken-4">
                            Rechercher
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>