{% extends 'fo_partials/base.html.twig' %}

{% block body %}
    {% include 'fo_partials/search.html.twig' %}

    <div class="container">
        <ul>
            <div class="row my-3">
                {% for result in results %}
                    {% if result.entity == 'brand' %}
                        {% set brand = result %}
                        {% include 'fo_partials/_brandCard.html.twig' %}

                    {% elseif result.entity == 'pattern' %}
                        {% set pattern = result %}
                        {% include 'fo_partials/_patternCard.html.twig' %}
                    {% endif %}
                {% endfor %}
            </div>
        </ul>
    </div>
{% endblock %}
