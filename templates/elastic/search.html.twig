{% extends 'fo_partials/base.html.twig' %}

{% block javascripts %}
    {{ encore_entry_script_tags('search') }}
{% endblock %}

{% block body %}
    {% include 'fo_partials/search.html.twig' %}

    <div class="container">
        <ul>
            <div class="row my-3">
                {% for result in results %}
                    {% if result.entity == 'brand' %}
                        <div class="col-4">
                            <div class="card teal darken-3">
                                <div class="card-image">
                                    <img src="/uploads/brand_images/{{ result.image }}" alt="{{ result.name }}">
                                    <a href="#" title="ajouter aux favoris"
                                       class="btn-floating halfway-fab waves-effect waves-light teal">
                                        <i class="fas fa-heart"></i>
                                    </a>
                                </div>
                                <div class="card-content">
                                    <span class="card-title center"><a href="#" class="white-text">{{ result.name }}</a></span>
                                    <p class="white-text">{{ result.description }}</p>
                                </div>
                            </div>
                        </div>

                    {% elseif result.entity == 'pattern' %}
                        {% set pattern = result %}
                        {% include 'fo_partials/_patternCard.html.twig' %}
                    {% endif %}
                {% endfor %}
            </div>
        </ul>
    </div>
{% endblock %}
